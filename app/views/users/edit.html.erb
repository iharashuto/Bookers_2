<div class="container">
  <div class="row">
    <div class="col-xs-2"></div>
    <div class="col-xs-10">
<h1>User info</h1>

<% if @user.errors.any? %>
<div id ="error_explanation">
<h2><%= @user.errors.count%> errors prohibited this obj from being saved:</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
</div>
<% end %>
<%= form_for(@user, url:"/users/#{@user.id}") do |f| %>
	<h4>Name</h4>
	<%= f.text_field :name %>
	<h4>Image</h4>
    <%= f.attachment_field :profile_image %>
	<h4>Introduction<%= f.text_area :introduction %></h4>
  <br><%= f.submit "Update User" %>
<% end %>
</div>
</div>
</div>