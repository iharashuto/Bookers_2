<div class="container">
	<div class="row">
		<div class="col-xs-3">
        <%= render "users/userinfo",user: current_user %>
        <%= render "books/new",book: @book %>
		</div>
		<div  class="col-xs-9">
			<h2>Users</h2>
			<table class="table  table-hover table-inverse">
				<thead>
				<tr>
					<th>image</th>
					<th>name</th>
					<th colspan="1"></th>
				</tr>
				</thead>
		               <% @users.each do |user| %>
			<tbody>
				<tr>
				    <td><%= attachment_image_tag user, :profile_image, :fill,70,70,format:"jpg",fallback: "no_image.jpg", size:'40x40'  %></td>
				    <td><%= user.name %></td>
				    <td><%= link_to "Show",user_path(user) %></td>
				</tr>
			</tbody>
			<% end %>
			</table>
		</div>
	   </div>
	</div>